{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".", // <--- Cambiato da "src" a "."
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "shared" // <--- Aggiunto
  ],
  "exclude": [
    "dist"
  ]
}